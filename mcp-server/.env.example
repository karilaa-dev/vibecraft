# VibeCraft MCP Server Configuration
# Copy this file to .env and fill in your values

# ============================================
# RCON Connection Settings
# ============================================
VIBECRAFT_RCON_HOST=127.0.0.1
VIBECRAFT_RCON_PORT=25575
VIBECRAFT_RCON_PASSWORD=minecraft
VIBECRAFT_RCON_TIMEOUT=10

# ============================================
# Safety Settings
# ============================================

# Enable command validation and sanitization
VIBECRAFT_ENABLE_SAFETY_CHECKS=true

# Allow potentially dangerous commands (regen, delchunks, etc.)
# Only enable if you trust the AI and understand the risks
VIBECRAFT_ALLOW_DANGEROUS_COMMANDS=false

# Maximum command length in characters
VIBECRAFT_MAX_COMMAND_LENGTH=1000

# ============================================
# Build Area Constraints (Optional)
# ============================================
# Restrict building to a specific area
# Leave commented out for no restrictions

# VIBECRAFT_BUILD_MIN_X=0
# VIBECRAFT_BUILD_MAX_X=1000
# VIBECRAFT_BUILD_MIN_Y=-64
# VIBECRAFT_BUILD_MAX_Y=319
# VIBECRAFT_BUILD_MIN_Z=0
# VIBECRAFT_BUILD_MAX_Z=1000

# ============================================
# Feature Flags
# ============================================

# Detect WorldEdit version on startup
VIBECRAFT_ENABLE_VERSION_DETECTION=true

# Log all commands to console (useful for debugging)
VIBECRAFT_ENABLE_COMMAND_LOGGING=true
