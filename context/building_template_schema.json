{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Minecraft Building Template Schema",
  "description": "Schema for parametric, reusable Minecraft building templates. Templates define structures with customizable parameters and build sequences using WorldEdit commands.",
  "version": "1.0.0",
  "type": "object",
  "required": ["template_id", "metadata", "parameters", "components", "build_sequence"],
  "properties": {
    "template_id": {
      "type": "string",
      "description": "Unique identifier for the template (snake_case)",
      "pattern": "^[a-z][a-z0-9_]*$",
      "examples": ["medieval_tower", "modern_house", "simple_barn"]
    },
    "metadata": {
      "type": "object",
      "required": ["name", "description", "category", "difficulty"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable name"
        },
        "description": {
          "type": "string",
          "description": "What this template builds"
        },
        "category": {
          "type": "string",
          "enum": ["towers", "houses", "agricultural", "defensive", "decorative", "industrial", "fantasy", "religious"],
          "description": "Category for organization"
        },
        "difficulty": {
          "type": "string",
          "enum": ["beginner", "intermediate", "advanced"],
          "description": "Build complexity"
        },
        "style_tags": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Style keywords for search",
          "examples": [["medieval", "stone", "defensive"], ["modern", "glass", "luxury"]]
        },
        "estimated_time_seconds": {
          "type": "integer",
          "description": "Approximate build time"
        },
        "author": {
          "type": "string",
          "description": "Template creator"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Template version (semver)"
        }
      }
    },
    "parameters": {
      "type": "object",
      "description": "Customizable parameters with types, ranges, and defaults",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "object",
            "required": ["type", "default"],
            "properties": {
              "type": {"const": "integer"},
              "default": {"type": "integer"},
              "min": {"type": "integer"},
              "max": {"type": "integer"},
              "description": {"type": "string"}
            }
          },
          {
            "type": "object",
            "required": ["type", "default", "options"],
            "properties": {
              "type": {"const": "enum"},
              "default": {"type": "string"},
              "options": {
                "type": "array",
                "items": {"type": "string"}
              },
              "description": {"type": "string"}
            }
          },
          {
            "type": "object",
            "required": ["type", "default"],
            "properties": {
              "type": {"const": "boolean"},
              "default": {"type": "boolean"},
              "description": {"type": "string"}
            }
          }
        ]
      },
      "examples": [{
        "height": {"type": "integer", "min": 10, "max": 50, "default": 20, "description": "Tower height in blocks"},
        "radius": {"type": "integer", "min": 4, "max": 12, "default": 6, "description": "Tower radius"},
        "material": {"type": "enum", "options": ["stone_bricks", "cobblestone", "dark_prismarine"], "default": "stone_bricks"},
        "has_windows": {"type": "boolean", "default": true, "description": "Include arrow slit windows"}
      }]
    },
    "components": {
      "type": "object",
      "description": "Named building components with instructions",
      "additionalProperties": {
        "type": "object",
        "required": ["description", "steps"],
        "properties": {
          "description": {
            "type": "string",
            "description": "What this component builds"
          },
          "dependencies": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Component IDs that must be built first"
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["action", "tool"],
              "properties": {
                "action": {"type": "string", "description": "Human-readable action"},
                "tool": {"type": "string", "description": "MCP tool to use"},
                "command": {"type": "string", "description": "WorldEdit command template with {{parameter}} placeholders"},
                "condition": {"type": "string", "description": "When to execute this step (optional)"}
              }
            }
          }
        }
      }
    },
    "build_sequence": {
      "type": "array",
      "description": "Ordered sequence of components to build",
      "items": {
        "type": "object",
        "required": ["component_id"],
        "properties": {
          "component_id": {"type": "string"},
          "checkpoint": {"type": "boolean", "description": "Pause for user confirmation before continuing"}
        }
      }
    },
    "dimensions": {
      "type": "object",
      "description": "Calculated dimensions based on parameters",
      "properties": {
        "footprint": {"type": "string", "description": "XÃ—Z ground footprint expression"},
        "total_height": {"type": "string", "description": "Total height expression"},
        "interior_space": {"type": "string", "description": "Usable interior dimensions"}
      }
    },
    "material_palette": {
      "type": "string",
      "description": "Reference to material palette ID from minecraft_material_palettes.json"
    }
  }
}
